{
  "name": "retro-search-2",
  "scripts": {
    "build:client": "bun install && bun --filter './apps/client' build",
    "deploy:api": "fly deploy -c apps/api/fly.toml --dockerfile apps/api/Dockerfile",
    "db:generate": "bun --filter './apps/api' db:generate",
    "dev": "bun --elide-lines=0 --filter '*' dev",
    "dev:api": "bun --elide-lines=0 --filter './apps/api' dev",
    "dev:client": "bun --elide-lines=0 --filter './apps/client' dev",
    "check": "bun --elide-lines=0 --filter '*' check",
    "check:fix": "bun --elide-lines=0 --filter '*' check:fix",
    "lint": "bun --elide-lines=0 --filter '*' lint",
    "format": "bun --elide-lines=0 --filter '*' format"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
